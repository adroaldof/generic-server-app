extends ../base

block content
    .container
        .row
            .col-md-6.col-xs-12
                h1 Update Your Info
                form(role='form', action='/api/core/user/#{ user._id }/update', method='post')
                    .form-group
                        input.form-control(type='text', name="name", value="#{ user.name || 'No name supplied'}", placeholder='Enter name')
                    .form-group
                        input.form-control(type='email', name="email", value="#{ user.email || 'You should see your email here'}", placeholder='Enter your email')
                    .form-group
                        input.form-control(type='phone', name="mobileNumber", value="#{ user.mobileNumber || 'No phone supplied' }", placeholder='Enter your phone')
                    button.btn.btn-primary(type='submit') Update Profile
                    &nbsp;
                    a(href='/api/core/user/#{ user._id }')
                        button.btn.btn-default Cancel

