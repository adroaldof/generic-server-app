{
    "bitwise"   : true,     // Prohibits the use of bitwise operators such as ^ (XOR), | (OR) and others.
    "browser"   : true,     // Define globals exposed by modern browsers.
    "camelcase" : true,     // Force all variable names to use either camelCase style or UPPER_CASE
    "curly"     : true,     // Always put curly braces around blocks in loops and conditionals
    "eqeqeq"    : true,     // Prohibit use of == and != in favor of === and !==.
    "esversion" : 6,        // Allow ES6.
    "eqnull"    : true,     // Suppress warnings about == null comparisons.
    "expr"      : true,     // Suppresses warnings about expect to see assignments or function calls
    "indent"    : 4,        // Enforce tab width of 4 spaces.
    "latedef"   : true,     // Prohibit use of a variable before it is defined.
    "maxlen"    : 120,      // Enforce line length to 100 characters
    "noarg"     : true,     // Prohibits the use of arguments.caller and arguments.callee
    "node"      : true,     // Defines globals available when your code is running inside of the Node runtime environment
    "nonbsp"    : true,     // Warn about non-breaking whitespace
    "phantom"   : true,     // Defines globals available when your core is running inside of the PhantomJS runtime environment
    "quotmark"  : "single", // Enforce use of single quotation marks for strings.
    "undef"     : true,     // Prohibit use of explicitly undeclared variables.
    "unused"    : true,     // Warn when variables are defined but never used.
    "globals"   : {
        "moment"    : true,
        "_"         : true
    }
}
